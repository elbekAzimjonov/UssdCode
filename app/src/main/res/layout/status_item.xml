<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/img"
        android:padding="10dp"
        android:id="@+id/sms_number"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custom_textview"
        android:gravity="center"
        android:text="50"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/sms_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/sms_number"
        android:text="SMS10"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iconCheck"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_keyword_bottom" />

    <TextView
        android:id="@+id/smsAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sms_name"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/sms_number"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/smsAbout"
        android:textSize="10sp" />

    <Button
        android:visibility="gone"
        android:id="@+id/ulanishBtn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/smsAbout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_rectangle_4"
        android:text="Ulanish"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ulanishBtn"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/sms_number"
        android:background="#8C8A8A" />
</RelativeLayout>